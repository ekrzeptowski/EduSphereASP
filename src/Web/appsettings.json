{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EduSphereDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtOptions": {
    "Issuer": "https://localhost:44300",
    "Audience": "https://localhost:44300",
    "DurationInMinutes": 60,
    "SecretKey": "very_long_secret_key_is_guarding_this_application_which_is_not_to_be_shared_with_anyone"
  },
  "ReverseProxy": {
    "Routes": {
      "TodoLists": {
        "ClusterId": "TodoApi",
        "Match": {
          "Path": "/api/TodoLists/{**catch-all}"
        },
        "AuthorizationPolicy": "default"
      },
      "TodoItems": {
        "ClusterId": "TodoApi",
        "Match": {
          "Path": "/api/TodoItems/{**catch-all}"
        }
      },
      "TodoApiSwagger": {
        "ClusterId": "TodoApi",
        "Match": {
          "Path": "/api/TodoApi/specification.json"
        }
      },
      "AuthServer": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "EduApiCourse": {
        "ClusterId": "EduApi",
        "Match": {
          "Path": "/api/course/{**catch-all}"
        }
      },
      "EduApiLesson": {
        "ClusterId": "EduApi",
        "Match": {
          "Path": "/api/lesson/{**catch-all}"
        }
      },
      "EduApiSwagger": {
        "ClusterId": "EduApi",
        "Match": {
          "Path": "/api/EduApi/specification.json"
        }
      }
    },
    "Clusters": {
      "TodoApi": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7086",
            "Swaggers": [
              {
                "PrefixPath": "/api",
                "Paths": [
                  "/TodoLists/specification.json"
                ]
              }
            ]
          }
        }
      },
      "auth": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7090",
            "Swaggers": [
              {
                "PrefixPath": "/api",
                "Paths": [
                  "/auth/specification.json"
                ]
              }
            ]
          }
        }
      },
      "EduApi": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7156",
            "Swaggers": [
              {
                "PrefixPath": "/api",
                "Paths": [
                  "/EduApi/specification.json"
                ]
              }
            ]
          }
        }
      }
    }
  }
}
